<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Font for the program/channel/recording title texts in the details screens -->
    <style name="TitleFont.Light" parent="@android:style/TextAppearance.Large">
        <item name="android:ellipsize">end</item>
        <item name="android:scrollHorizontally">false</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#999999</item>
    </style>

    
    <style name="TitleFont.Dark" parent="TitleFont.Light">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- Font for the subtitles in various screens -->
    <style name="SubtitleFont.Light" parent="@android:style/TextAppearance.Medium">
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">#888888</item>
    </style>

    <style name="SubtitleFont.Dark" parent="SubtitleFont.Light">
        <item name="android:textColor">#DDDDDD</item>
    </style>

    <!-- Font for the header texts in the details screens -->
    <style name="HeaderFont.Light" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#999999</item>
    </style>

    <style name="HeaderFont.Dark" parent="HeaderFont.Light">
        <item name="android:textColor">#DDDDDD</item>
    </style>

    <!-- Font for the menu texts in the navigation drawer -->
    <style name="MenuFont.Light" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#444444</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MenuFont.Dark" parent="MenuFont.Light">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- Font for the menu header texts in the navigation drawer -->
    <style name="MenuHeaderFont.Light" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#999999</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MenuHeaderFont.Dark" parent="MenuHeaderFont.Light">
        <item name="android:textColor">#AAAAAA</item>
    </style>

    <!-- Font for the program title in the program guide screen -->
    <style name="ProgramGuideTimelineFont.Light" parent="@android:style/TextAppearance.Small">
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">#444444</item>
    </style>

    <style name="ProgramGuideTimelineFont.Dark" parent="ProgramGuideTimelineFont.Light">
        <item name="android:textColor">#DDDDDD</item>
    </style>

    <!-- Font for the program title in the program guide screen -->
    <style name="ProgramGuideTitleFont.Light" parent="@android:style/TextAppearance.Small">
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">#999999</item>
    </style>

    <style name="ProgramGuideTitleFont.Dark" parent="ProgramGuideTitleFont.Light">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- Font for the additional information in the program guide screen -->
    <style name="ProgramGuideFont.Light" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#666666</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ProgramGuideFont.Dark" parent="ProgramGuideFont.Light">
        <item name="android:textColor">#DDDDDD</item>
    </style>

    <style name="dialog_animation_fade">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <!-- Styles that will be used for the dark holo theme -->
    <style name="CustomTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="ic_menu_search">@drawable/ic_menu_search_dark</item>
        <item name="ic_menu_save">@drawable/ic_menu_save_dark</item>
        <item name="ic_menu_cancel">@drawable/ic_menu_cancel_dark</item>
        <item name="ic_menu_add">@drawable/ic_menu_new_dark</item>
        <item name="ic_menu_tags">@drawable/ic_menu_tags_dark</item>
        <item name="ic_menu_record_once">@drawable/ic_menu_record_once_dark</item>
        <item name="ic_menu_record_series">@drawable/ic_menu_record_series_dark</item>
        <item name="ic_menu_record_cancel">@drawable/ic_menu_record_cancel_dark</item>
        <item name="ic_menu_record_remove">@drawable/ic_menu_record_remove_dark</item>
        <item name="ic_menu_refresh">@drawable/ic_menu_refresh_dark</item>
        <item name="ic_menu_settings">@drawable/ic_menu_settings_dark</item>
        <item name="ic_menu_play">@drawable/ic_menu_play_dark</item>
        <item name="ic_menu_delete">@drawable/ic_menu_delete_dark</item>
        <item name="ic_menu_edit">@drawable/ic_menu_edit_dark</item>
        <item name="ic_menu_timeframe">@drawable/ic_menu_timeframe_dark</item>
        <item name="ic_menu_wol">@drawable/ic_menu_send_wol_dark</item>
        <item name="item_active">@drawable/item_active_dark</item>
        <item name="item_not_active">@drawable/item_not_active_dark</item>
        <item name="TitleFont">@style/TitleFont.Dark</item>
        <item name="SubtitleFont">@style/SubtitleFont.Dark</item>
        <item name="MenuFont">@style/MenuFont.Dark</item>
        <item name="MenuHeaderFont">@style/MenuHeaderFont.Dark</item>
        <item name="HeaderFont">@style/HeaderFont.Dark</item>
        <item name="ProgramGuideTimelineFont">@style/ProgramGuideTimelineFont.Dark</item>
        <item name="ProgramGuideTitleFont">@style/ProgramGuideTitleFont.Dark</item>
        <item name="ProgramGuideFont">@style/ProgramGuideFont.Dark</item>
        <item name="TimelineItemLayoutStyle">@drawable/timeline_item_dark</item>
        <item name="TimelineHeaderLayoutStyle">@drawable/timeline_header_dark</item>
        <item name="TimelineListLayoutStyle">@drawable/timeline_list_dark</item>
        <item name="MenuItemLayoutStyle">@drawable/menu_item_dark</item>
        <item name="MenuHeaderLayoutStyle">@drawable/menu_header_dark</item>
        <item name="menu_text_selector">@drawable/menu_text_selector_dark</item>
        <item name="toolbar_background_color">@color/toolbar_background_color_dark</item>
    </style>

    <!-- Styles that will be used for the light holo theme -->
    <style name="CustomTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="ic_menu_search">@drawable/ic_menu_search_light</item>
        <item name="ic_menu_save">@drawable/ic_menu_save_light</item>
        <item name="ic_menu_cancel">@drawable/ic_menu_cancel_light</item>
        <item name="ic_menu_add">@drawable/ic_menu_new_light</item>
        <item name="ic_menu_tags">@drawable/ic_menu_tags_light</item>
        <item name="ic_menu_record_once">@drawable/ic_menu_record_once_light</item>
        <item name="ic_menu_record_series">@drawable/ic_menu_record_series_light</item>
        <item name="ic_menu_record_cancel">@drawable/ic_menu_record_cancel_light</item>
        <item name="ic_menu_record_remove">@drawable/ic_menu_record_remove_light</item>
        <item name="ic_menu_refresh">@drawable/ic_menu_refresh_light</item>
        <item name="ic_menu_settings">@drawable/ic_menu_settings_light</item>
        <item name="ic_menu_play">@drawable/ic_menu_play_light</item>
        <item name="ic_menu_delete">@drawable/ic_menu_delete_light</item>
        <item name="ic_menu_edit">@drawable/ic_menu_edit_light</item>
        <item name="ic_menu_timeframe">@drawable/ic_menu_timeframe_light</item>
        <item name="ic_menu_wol">@drawable/ic_menu_send_wol_light</item>
        <item name="item_active">@drawable/item_active_light</item>
        <item name="item_not_active">@drawable/item_not_active_light</item>
        <item name="TitleFont">@style/TitleFont.Light</item>
        <item name="SubtitleFont">@style/SubtitleFont.Light</item>
        <item name="MenuFont">@style/MenuFont.Light</item>
        <item name="MenuHeaderFont">@style/MenuHeaderFont.Light</item>
        <item name="HeaderFont">@style/HeaderFont.Light</item>
        <item name="ProgramGuideTimelineFont">@style/ProgramGuideTimelineFont.Light</item>
        <item name="ProgramGuideTitleFont">@style/ProgramGuideTitleFont.Light</item>
        <item name="ProgramGuideFont">@style/ProgramGuideFont.Light</item>
        <item name="TimelineItemLayoutStyle">@drawable/timeline_item_light</item>
        <item name="TimelineHeaderLayoutStyle">@drawable/timeline_header_light</item>
        <item name="TimelineListLayoutStyle">@drawable/timeline_list_light</item>
        <item name="MenuItemLayoutStyle">@drawable/menu_item_light</item>
        <item name="MenuHeaderLayoutStyle">@drawable/menu_header_light</item>
