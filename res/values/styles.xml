<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TitleFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#AAAAAA</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="CustomTheme" parent="android:Theme.Holo">
        <item name="ic_menu_search">@drawable/ic_menu_search_dark</item>
    </style>

    <style name="CustomTheme.Light" parent="android:Theme.Holo.Light">
        <item name="ic_menu_search">@drawable/ic_menu_search_light</item>
    </style>

</resources>