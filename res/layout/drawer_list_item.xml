<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/MenuHeaderLayoutStyle"
        android:minHeight="2dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/header"
            style="?attr/MenuHeaderFont"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_layout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="?attr/MenuItemLayoutStyle"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/icon"
            android:layout_width="56dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.1"
            android:contentDescription="@string/channel_icon"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_menu_channels_light" />

        <TextView
            android:id="@+id/title"
            style="?attr/MenuFont"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.9"
            android:gravity="center_vertical"
            android:paddingRight="8dp"
            android:text="" />

        <TextView
            android:id="@+id/count"
            style="?attr/MenuFont"
            android:layout_width="56dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.1"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="" />
    </LinearLayout>

</LinearLayout>