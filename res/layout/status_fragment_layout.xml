<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_parent_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/main_toolbar"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


		<ScrollView
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent" >
		
		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="vertical" >
		
		        <TextView
		            android:id="@+id/connection_label"
		            style="?attr/TitleFont"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:paddingLeft="12dp"
		            android:paddingRight="12dp"
		            android:paddingTop="6dp"
		            android:text="@string/connection" />
		
		        <TextView
		            android:id="@+id/connection"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:paddingBottom="12dp"
		            android:paddingLeft="12dp"
		            android:paddingRight="12dp"
		            android:singleLine="true"
		            android:text="@string/connection" />
		
		        <TextView
		            android:id="@+id/status_label"
		            style="?attr/TitleFont"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:paddingLeft="12dp"
		            android:paddingRight="12dp"
		            android:paddingTop="6dp"
		            android:text="@string/status" />
		
		        <TextView
		            android:id="@+id/status"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:paddingBottom="12dp"
		            android:paddingLeft="12dp"
		            android:paddingRight="12dp"
		            android:singleLine="true"
		            android:text="@string/status" />
		
		        <TextView
		            android:id="@+id/channel_label"
		            style="?attr/TitleFont"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:paddingLeft="12dp"
		            android:paddingRight="12dp"
		            android:paddingTop="6dp"
		            android:text="@string/channels" />
		
		        <TextView
		            android:id="@+id/channels"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:paddingBottom="12dp"
		            android:paddingLeft="12dp"
		            android:paddingRight="12dp"
		            android:singleLine="true"
		            android:text="@string/channels" />
		
		        <TextView
		            android:id="@+id/recording_label"
		            style="?attr/TitleFont"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:paddingLeft="12dp"
		            android:paddingRight="12dp"
		            android:paddingTop="6dp"
		            android:text="@string/recordings" />
		
		        <TextView
		            android:id="@+id/completed_recordings"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:paddingLeft="12dp"
		            android:paddingRight="12dp"
		            android:singleLine="true"
		            android:text="@string/completed_recordings" />
		
		        <TextView
		            android:id="@+id/upcoming_recordings"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:paddingLeft="12dp"
		            android:paddingRight="12dp"
		            android:singleLine="true"
		            android:text="@string/upcoming_recordings" />
		
		        <TextView
		            android:id="@+id/failed_recordings"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:paddingBottom="12dp"
		            android:paddingLeft="12dp"
		            android:paddingRight="12dp"
		            android:singleLine="true"
		            android:text="@string/failed_recordings" />
		
		        <TextView
		            android:id="@+id/series_recording_label"
		            style="?attr/TitleFont"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:paddingLeft="12dp"
		            android:paddingRight="12dp"
		            android:paddingTop="6dp"
		            android:text="@string/series_recordings" />
		
		        <TextView
		            android:id="@+id/series_recordings"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:paddingBottom="12dp"
		            android:paddingLeft="12dp"
		            android:paddingRight="12dp"
		            android:singleLine="true"
		            android:text="@string/series_recordings" />
		
		        <TextView
		            android:id="@+id/currently_recording_label"
		            style="?attr/TitleFont"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:paddingLeft="12dp"
		            android:paddingRight="12dp"
		            android:paddingTop="6dp"
		            android:text="@string/currently_recording" />
		
		        <TextView
		            android:id="@+id/currently_recording"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:paddingBottom="12dp"
		            android:paddingLeft="12dp"
		            android:paddingRight="12dp"
		            android:text="@string/nothing" />
		
		        <TextView
		            android:id="@+id/discspace_label"
		            style="?attr/TitleFont"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:paddingLeft="12dp"
		            android:paddingRight="12dp"
		            android:paddingTop="6dp"
		            android:text="@string/disc_space" />
		
		        <TextView
		            android:id="@+id/total_discspace"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:paddingLeft="12dp"
		            android:paddingRight="12dp"
		            android:singleLine="true"
		            android:text="@string/unknown" />
		
		        <TextView
		            android:id="@+id/free_discspace"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:paddingBottom="12dp"
		            android:paddingLeft="12dp"
		            android:paddingRight="12dp"
		            android:singleLine="true"
		            android:text="@string/unknown" />
		    </LinearLayout>
		
		</ScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@drawable/toolbar_dropshadow" />
    </FrameLayout>
</LinearLayout>